
  <div class="card">
    <div class="card-content">
      <span class="card-title">Recently Opened Investigations</span>
      <% unless @recent_investigations.empty? %>

        <table class="striped highlight">
          <thead>
            <th>Investigation</th>
            <th>Date Added</th>
          </thead>
          <% for investigation in @recent_investigations %>
            <tr>
              <td><%= link_to investigation.title, investigation_path(investigation) %></td>
              <td><%= investigation.date_opened.strftime("%m/%d/%y") %></td>
            </tr>
          <% end %>
        </table>

      <% end %>
      
    </div>
  </div>
