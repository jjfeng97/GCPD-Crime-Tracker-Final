
  <div class="card">
    <div class="card-content">
      <span class="card-title">Recently Opened Investigations</span>
      <% unless @recent_investigations.empty? %>
        <% for investigation in @recent_investigations %>

          <ul class="collapsible">
            <li>
              <div class="collapsible-header"><i class="material-icons">add</i>
                  <%= investigation.title %> (opened on <%= investigation.date_opened.strftime("%m/%d/%y") %>)
              </div>

              <div class="collapsible-body"><span>
                <div class="card-action">
                  <%= link_to "Go to Investigation", investigation_path(investigation) %>
                </div>

                <% unless investigation.investigation_notes.empty? %>
                  <table class="striped highlight">
                    <thead>
                      <th>Note</th>
                      <th>Date</th>
                    </thead>
                    <% for note in investigation.investigation_notes %>
                      <tr>
                        <td><%= note.content %></td>
                        <td><%= note.date %></td>

                        <% if can? :edit, note and note.officer == current_user.officer %>
                          <td class="align_center">
                            <%= link_to edit_investigation_note_path(note) do %>
                                <i class="material-icons">edit</i>
                            <% end %>
                          </td>
                        <% end %>
                      </tr>
                    <% end %>
                  </table>
                <% end %>

                <% if can? :new, InvestigationNote and investigation.assignments.map{ |a| a.officer }.include? current_user.officer %>
                  <div class="card-action">
                    <%= link_to "Add a new note", new_investigation_note_path(investigation_id: investigation.id, officer_id: current_user.officer.id, from: "dashboard") %>
                  </div>
                <% end %>

              </span></div>
            </li>
          </ul>

      <% end %>
      
    </div>
  </div>
<% else%>
  <% if @officer.active %>
    <% if can? :new, Assignment %>
      <div class="card grey lighten-3">
        <div class="card-action">
          <%= link_to "Add a new assignment", new_assignment_path(officer_id: @officer.id, from: "dashboard") %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end%>