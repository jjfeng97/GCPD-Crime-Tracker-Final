<div class="row">
<div class="col s10">
<%= form_with url: eval("#{model_name}_search_path"), method: :get, class: "form-inline", id: "search" do |f| %>
  <%= text_field_tag 'query', '', placeholder: "Search #{model_name}s..." %>
  <!-- submitting via js (press enter) so not using... -->
</div>
<div class="col s2"><span class = "action"><button class="btn-floating btn waves-effect waves-light" type="submit" name="action"><i class="material-icons">search</i></span></button>
  
<% end %>
</div>
</div>