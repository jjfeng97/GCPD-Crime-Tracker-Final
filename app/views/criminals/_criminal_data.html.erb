<div class="card">
  <div class="card-content">
    <h5>Information for 
    <%= best_in_place @criminal, :first_name, as: :input %> 
    <%= best_in_place @criminal, :last_name, as: :input %><br /><br /></h5><br />

    <b>Alias:&nbsp;&nbsp;</b>
      <%= best_in_place @criminal, :aka, as: :input %><br /><br />

    <b>Convicted Felon?&nbsp;&nbsp;</b>
      <%= @criminal.convicted_felon ? "Yes" : "No" %><br><br>

    <b>Has Enhanced Powers?&nbsp;&nbsp;</b>
      <%= @criminal.enhanced_powers ? "Yes" : "No" %><br><br>

    <b>Notes:&nbsp;&nbsp;</b>
      <%= @criminal.notes %><br><br><br>

  </div>
</div>